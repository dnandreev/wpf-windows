<Window x:Class="Variant2.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Variant2"
		mc:Ignorable="d"
		Title="Открытие изображений" Width="320" Height="240" ResizeMode="NoResize" Closing="shutdown">
	<StackPanel VerticalAlignment="Center">
		<Button Content="Добавить изображение" Click="add" Margin="10" Padding="5"/>
		<Button Content="Просмотреть изображения..." Click="show"  Margin="10" Padding="5"/>
	</StackPanel>
</Window>