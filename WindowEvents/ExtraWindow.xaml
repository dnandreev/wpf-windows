<Window x:Class="WindowEvents.ExtraWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WindowEvents"
		mc:Ignorable="d"
		Title="Confirm" Width="320" Height="240" MinWidth="320" MinHeight="240" MaxWidth="320" MaxHeight="240">
	<UniformGrid Columns="1" VerticalAlignment="Center">
		<Label Content="Are you sure?" HorizontalAlignment="Center"/>
		<Button Content="Yes" Click="yes" Margin="10" Padding="5"/>
		<Button Content="No" Click="no" Margin="10" Padding="5"/>
	</UniformGrid>
</Window>