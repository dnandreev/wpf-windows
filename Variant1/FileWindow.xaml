<Window x:Class="Variant1.FileWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Variant1"
		mc:Ignorable="d"
		Title="Работа с файлами" Width="320" Height="240" ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBox Name="text" Grid.Row="0" Margin="10" Padding="5"/>
		<Button Content="Загрузить из файла..." Click="open" Grid.Row="1" Margin="10" Padding="5"/>
		<Button Content="Выгрузить в файл..." Click="save" Grid.Row="2" Margin="10" Padding="5"/>
	</Grid>
</Window>