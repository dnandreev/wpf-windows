<Window x:Class="Variant1.AverageWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Variant1"
		mc:Ignorable="d"
		Title="Расчёт среднего арифметического" Width="320" Height="240" ResizeMode="NoResize">
	<UniformGrid Columns="1" VerticalAlignment="Center">
		<Label Content="Введите разделённые запятыми целые числа" HorizontalAlignment="Center" Margin="5" Padding="5"/>
		<TextBox Name="numbers" Margin="5" Padding="5"/>
		<Button Content="Рассчитать среднее арифметическое" Click="carryOut" Margin="5" Padding="5"/>
		<TextBox Name="average" IsReadOnly="True" Background="LightGray" Margin="5" Padding="5"/>
	</UniformGrid>
</Window>