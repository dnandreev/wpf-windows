<Window x:Class="Variant1.SquareEquationWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Variant1"
		mc:Ignorable="d"
		Title="Решение квадратного уравнения" Width="320" Height="240" ResizeMode="NoResize">
	<UniformGrid Columns="1" VerticalAlignment="Center">
		<Label Content="Введите коэффициенты квадратного уравнения" HorizontalAlignment="Center" Margin="5" Padding="5"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<TextBox Name="x2" Text="0"/>
			<TextBlock Text="x^2 + ("/>
			<TextBox Name="x1" Text="0"/>
			<TextBlock Text=") x + ("/>
			<TextBox Name="x0" Text="0"/>
			<TextBlock Text=")"/>
		</StackPanel>
		<Button Content="Решить квадратное уравнение" Click="carryOut" Margin="5" Padding="5"/>
		<TextBox Name="result" IsReadOnly="True" Background="LightGray" Margin="5" Padding="5"/>
	</UniformGrid>
</Window>