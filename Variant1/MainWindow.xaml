<Window x:Class="Variant1.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Variant1"
		mc:Ignorable="d"
		Title="Работа с окнами" Width="480" Height="360" MinWidth="480" MinHeight="360" Closing="shutdown">
	<UniformGrid Columns="1" VerticalAlignment="Center">
		<Label Content="Выберите действие" HorizontalAlignment="Center" Margin="10" Padding="5"/>
		<Button Content="Расчёт среднего арифметического" Click="average" Margin="10" Padding="5"/>
		<Button Content="Решение квадратного уравнения" Click="squareEquation" Margin="10" Padding="5"/>
		<Button Content="Работа со списками" Click="list"  Margin="10" Padding="5"/>
		<Button Content="Работа с файлами" Click="file"  Margin="10" Padding="5"/>
	</UniformGrid>
</Window>